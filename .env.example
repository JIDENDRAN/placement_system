# ===========================================
# Django Placement System — Environment Config
# ===========================================
# Copy this file to .env and fill in your values:
#   copy .env.example .env
# ===========================================

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Option 1: AWS RDS PostgreSQL (Production / Cloud)
# Set DATABASE_URL to connect to AWS RDS. If not set, SQLite is used.
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
# Example:
# DATABASE_URL=postgres://placementadmin:MySecurePass123@placement-system-db.abc123xyz.ap-south-1.rds.amazonaws.com:5432/placement_db

# Option 2: Local PostgreSQL
# DATABASE_URL=postgres://postgres:password@localhost:5432/placement_db

# Option 3: SQLite (Default — no DATABASE_URL needed)
# If DATABASE_URL is not set, Django automatically uses local db.sqlite3

# ===========================================
# AWS S3 — Media File Storage (Optional)
# ===========================================
# Set these to store uploaded files (resumes, profile pics, logos) on S3
# If not set, files are stored locally in the /media/ folder
# AWS_ACCESS_KEY_ID=AKIA...your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=placement-system-media
# AWS_S3_REGION_NAME=ap-south-1

# ===========================================
# Email Settings (for password reset, notifications)
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# Security (set these to True in production)
# ===========================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ===========================================
# Application Settings
# ===========================================
SITE_NAME=Student Placement System
ADMIN_EMAIL=admin@placement.com
